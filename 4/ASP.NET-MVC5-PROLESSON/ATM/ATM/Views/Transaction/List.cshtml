            @Html.DisplayFor(modelItem => item.CheckingAccount.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountDecimal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
