}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CheckingAccount.AccountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountDecimal)
        </th>
