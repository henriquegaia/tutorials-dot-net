@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    <!-- LEFT -->
    <div class="col-md-6 margin-top-20">
        <!-------------------------------------------------------------------------------------->
        <a href="@Url.Action(
                     "Withdraw",
                     "Transaction",
                     new {checkingAccountId = ViewBag.CheckingAccountId})"
           class="btn btn-primary btn-large btn-block">
            <span class="glyphicon glyphicon-circle-arrow-down">
            </span>
            Withdrawal
        </a>
        <!-------------------------------------------------------------------------------------->

        <a href="@Url.Action(
                     "QuickCash100",
                     "Transaction",
                     new {checkingAccountId = ViewBag.CheckingAccountId})"
           class="btn btn-primary btn-large btn-block">
            <span class="glyphicon glyphicon-flash">
            </span>
            Quick cash $100
        </a>
        <!-------------------------------------------------------------------------------------->

        <a href="@Url.Action("Details", "CheckingAccount")" class="btn btn-primary btn-large btn-block">
            <span class="glyphicon glyphicon-question-sign">
            </span>
            Balance Inquiry
        </a>
        <!-------------------------------------------------------------------------------------->

    </div>

    <!-- RIGHT-->

    <div class="col-md-6 margin-top-20">
        <!-------------------------------------------------------------------------------------->

        <a href="#" class="btn btn-primary btn-large btn-block">
            <span class="glyphicon glyphicon-print">
            </span>
            Print Statement
        </a>
        <!-------------------------------------------------------------------------------------->
        <!-- TODO: transfer funds logic -->
        <a href="@Url.Action(
                "Transfer",
                "Transaction",
                     new {checkingAccountId = ViewBag.CheckingAccountId})"
           class="btn btn-primary btn-large btn-block">
            <span class="glyphicon glyphicon-transfer">
            </span>
            TODO - Transfer Funds
        </a>
        <!-------------------------------------------------------------------------------------->

        <a href="@Url.Action(
                     "Deposit",
                     "Transaction",
                     new {checkingAccountId = ViewBag.CheckingAccountId})"
           class="btn btn-primary btn-large btn-block">
            <span class="glyphicon glyphicon-circle-arrow-up">
            </span>
            Deposit
        </a>
        <!-------------------------------------------------------------------------------------->

    </div>

    <!-- Other Stuff-->

    <div class="col-md-6 margin-top-20">
        <!-------------------------------------------------------------------------------------->

        <a href="@Url.Action("Details", "CheckingAccount", new {checkingAccountId = ViewBag.CheckingAccountId})"
           class="btn btn-primary btn-info btn-block">
            Checking Account Details
            <span></span>
        </a>
        <!-------------------------------------------------------------------------------------->

    </div>

    <div class="col-md-6 margin-top-20">
        <!-------------------------------------------------------------------------------------->
        <!-- TODO: open acount logic -->
        <a href="@Url.Action(
                     "List",
                     "Transaction",
                     new {checkingAccountId = ViewBag.CheckingAccountId, test=1})"
           class="btn btn-primary btn-info btn-block">
            TODO - Transactions
            <span></span>
        </a>
        <!-------------------------------------------------------------------------------------->

    </div>
</div>
